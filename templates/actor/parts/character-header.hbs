<header class="sheet-header">
    <img class="portrait-img" data-action="editImage" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"
        height="120" />
    <div class="header-fields">
        {{!-- Edit Mode Layout --}}
        <div class="title">
            <h1 class="charname"><input name="name" type="text" value="{{actor.name}}"
                    placeholder="{{localize 'MIST_ENGINE.PLACEHOLDERS.Name'}}" /></h1>

        </div>
        <div class="other">
            <div class="archetype-entry">
                <label for="system.archetype" class="styled-label">ARCHETYPE</label>
                <input type="text" name="system.archetype" value="{{system.archetype}}" />
            </div>
            <div class="xp">
                <div class="grid grid-3col">
                    <div class="xp-entry">
                        <label for="system.xp.total" class="styled-label">Total XP earned:</label>
                        <input type="number" name="system.xp.total" value="{{system.xp.total}}" data-dtype="Number" />
                    </div>
                    <div class="xp-entry">
                        <label for="system.xp.unused" class="styled-label">Unused XP:</label>
                        <input type="number" name="system.xp.unused" value="{{system.xp.unused}}" data-dtype="Number" />
                    </div>
                    <div class="xp-entry">
                        <label for="system.dicepool.max" class="styled-label">Dicepool:</label>
                        <input type="number" name="system.dicepool.max" value="{{system.dicepool.max}}"
                            data-dtype="Number" />
                    </div>
                </div>
            </div>
        </div>
        <div class="dicepool-container grid grid-4col">
            <div class="grid-span-2">
                {{> systems/arkham-horror-rpg-fvtt/templates/actor/parts/character-dicepool.hbs}}
            </div>
            <div class="header-form-group"><label class="header-label">Damage:</label><input type="number" name="system.damage"
                    value="{{system.damage}}" data-dtype="Number" class="small-input" /></div>
            <div class="header-form-group"><label class="header-label">Horror:</label><input type="number" name="system.horror"
                    value="{{system.horror}}" data-dtype="Number" class="small-input" /></div>
        </div>
    </div>
</header>